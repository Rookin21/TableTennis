                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15" 
                           Grid.Row="1" Click="ButtonPlayer9_Click"/>
                    <Button Content="Player 10"
                           x:Name="ButtonPlayer10"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15"
                           Grid.Row="2" Click="ButtonPlayer10_Click"/>
                    <Button Content="Player 11"
                           x:Name="ButtonPlayer11"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15"
                           Grid.Row="5" Click="ButtonPlayer11_Click"/>
                    <Button Content="Player 12"
                           x:Name="ButtonPlayer12"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15"
                           Grid.Row="6" Click="ButtonPlayer12_Click"/>
                    <Button Content="Player 13"
                           x:Name="ButtonPlayer13"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15"
                           Grid.Row="9" Click="ButtonPlayer13_Click"/>
                    <Button Content="Player 14"
                           x:Name="ButtonPlayer14"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15"
                           Grid.Row="10" Click="ButtonPlayer14_Click"/>
                    <Button Content="Player 15"
                           x:Name="ButtonPlayer15"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15"
                           Grid.Row="13" Click="ButtonPlayer15_Click"/>
                    <Button Content="Player 16"
                           x:Name="ButtonPlayer16"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="15"
                           Grid.Row="14" Click="ButtonPlayer16_Click"/>
                    <!--#endregion-->
                    <!--#region 1/4-->
                    <TextBlock Text="1/4" Grid.Column="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="PlayerQuarter 5"
                           x:Name="PlayerQuarter5"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="13"
                           Grid.Row="3" Click="PlayerQuarter5_Click"/>
                    <Button Content="PlayerQuarter 6"
                           x:Name="PlayerQuarter6"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="13"
                           Grid.Row="4" Click="PlayerQuarter6_Click"/>
                    <Button Content="PlayerQuarter 7"
                           x:Name="PlayerQuarter7"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="13"
                           Grid.Row="11" Click="PlayerQuarter7_Click"/>
                    <Button Content="PlayerQuarter 8"
                           x:Name="PlayerQuarter8"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="13"
                           Grid.Row="12" Click="PlayerQuarter8_Click"/>
                    <!--#endregion-->
                    <!--#region 1/2-->
                    <TextBlock Text="1/2" Grid.Column="11" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="PlayerSemiFinal 3"
                           x:Name="PlayerSemiFinal3"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="11"
                           Grid.Row="7" Click="PlayerSemiFinal3_Click"/>
                    <Button Content="PlayerSemiFinal 4"
                           x:Name="PlayerSemiFinal4"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="11"
                           Grid.Row="8" Click="PlayerSemiFinal4_Click"/>
                    <!--#endregion-->
                    <!--#endregion-->
                    <Button Click="Generation" Grid.Column="8" Grid.Row="1" Background="Gray" Content="Генерация" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem Header="Игроки"></TabItem>
            <TabItem Header="Рейтинг за месяц"></TabItem>
            <TabItem Header="Рейтинг за все время"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
