<Window x:Class="TableTennis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableTennis"
        mc:Ignorable="d"
        Title="Настольный теннис" Height="1000" Width="1500" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom"></StatusBar>
        <TabControl>
            <TabItem Header="Турнирная сетка">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--#region Левая часть сетки-->
                    <!--#region 1/8-->
                    <TextBlock Text="1/8" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="Player 1" 
                            x:Name="ButtonPlayer1"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" 
                            BorderBrush="Black"
                            BorderThickness="1"
                            Grid.Column="1" 
                            Grid.Row="1" Click="ButtonPlayer1_Click"/>
                    <Button Content="Player 2"
                           x:Name="ButtonPlayer2"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="1"
                           Grid.Row="2" Click="ButtonPlayer2_Click"/>
                    <Button Content="Player 3"
                           x:Name="ButtonPlayer3"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="1"
                           Grid.Row="5" Click="ButtonPlayer3_Click"/>
                    <Button Content="Player 4"
                           x:Name="ButtonPlayer4"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="1"
                           Grid.Row="6" Click="ButtonPlayer4_Click"/>
                    <Button Content="Player 5"
                           x:Name="ButtonPlayer5"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="1"
                           Grid.Row="9" Click="ButtonPlayer5_Click"/>
                    <Button Content="Player 6"
                           x:Name="ButtonPlayer6"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="1"
                           Grid.Row="10" Click="ButtonPlayer6_Click"/>
                    <Button Content="Player 7"
                           x:Name="ButtonPlayer7"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="1"
                           Grid.Row="13" Click="ButtonPlayer7_Click"/>
                    <Button Content="Player 8"
                           x:Name="ButtonPlayer8"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="1"
                           Grid.Row="14" Click="ButtonPlayer8_Click"/>
                    <!--#endregion-->
                    <!--#region 1/4-->
                    <TextBlock Text="1/4" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="PlayerQuarter 1"
                           x:Name="PlayerQuarter1"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="3"
                           Grid.Row="3" Click="PlayerQuarter1_Click"/>
                    <Button Content="PlayerQuarter 2"
                           x:Name="PlayerQuarter2"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="3"
                           Grid.Row="4" Click="PlayerQuarter2_Click"/>
                    <Button Content="PlayerQuarter 3"
                           x:Name="PlayerQuarter3"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="3"
                           Grid.Row="11" Click="PlayerQuarter3_Click"/>
                    <Button Content="PlayerQuarter 4"
                           x:Name="PlayerQuarter4"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="3"
                           Grid.Row="12" Click="PlayerQuarter4_Click"/>
                    <!--#endregion-->
                    <!--#region 1/2-->
                    <TextBlock Text="1/2" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="PlayerSemiFinal 1"
                           x:Name="PlayerSemiFinal1"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="5"
                           Grid.Row="7" Click="PlayerSemiFinal1_Click"/>
                    <Button Content="PlayerSemiFinal 2"
                           x:Name="PlayerSemiFinal2"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="5"
                           Grid.Row="8" Click="PlayerSemiFinal2_Click"/>
                    <!--#endregion-->
                    <!--#endregion-->
                    <!--#region Финалы-->
                    <TextBlock Text="Финал" Grid.Column="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="Finalist 1"
                           x:Name="Finalist1"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="8"
                           Grid.Row="7" Click="Finalist1_Click"/>
                    <Button Content="Finalist 2"
                           x:Name="Finalist2"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="8"
                           Grid.Row="8" Click="Finalist2_Click"/>
                    <Button Content="Finalist 3"
                           x:Name="Finalist3"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="8"
                           Grid.Row="13" Click="Finalist3_Click"/>
                    <Button Content="Finalist 4"
                           x:Name="Finalist4"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           BorderBrush="Black"
                           BorderThickness="1"
                           Grid.Column="8"
                           Grid.Row="14" Click="Finalist4_Click"/>
                    <!--#endregion-->
                    <!--#region Правая часть сетки-->
                    <!--#region 1/8-->
                    <TextBlock Text="1/8" Grid.Column="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="Player 9" 
                           x:Name="ButtonPlayer9"
                           HorizontalContentAlignment="Center"
